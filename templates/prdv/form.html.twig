{% extends 'base_proprietaire.html.twig' %}
{% block title %}Propriétaire{% endblock %}

{% block body %}
<div id="hero" class="d-flex justify-content-center align-items-center">
    <div class="container position-relative" data-aos="fade-up" data-aos-delay="100">

        <div class="container py-5 ">
            <div class="row">
                <table id="example" class="table table-striped" style="width:100%">


                    {{ form_start(formulaire, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

                    {{ form_row(formulaire.date, {'label': 'Date du rendez-vous','label_attr': {'class': 'col-sm-3 control-label'}, 'attr': {'class': 'form-control'}}) }}

                    {{ form_row(formulaire.heure, {'label': 'Heure du rendez-vous','label_attr': {'class': 'col-sm-3 control-label'}, 'attr': {'class': 'form-control'}}) }}
                    {{ form_row(formulaire.Veterinaire, {'label': 'Nom Du Vétérinaire','label_attr': {'class': 'col-sm-3 control-label'}, 'attr': {'class': 'form-control'}}) }}


                    {{ form_row(formulaire.raceanimal, {'label': 'Race de l\'animal','label_attr': {'class': 'col-sm-3 control-label'}, 'attr': {'class': 'form-control'}}) }}
                    {{ form_row(formulaire.nomanimal, {'label': 'Nom de l\'animal','label_attr': {'class': 'col-sm-3 control-label'}, 'attr': {'class': 'form-control'}}) }}
                    {{ form_widget(formulaire.Decision, {'attr': {'style': 'display:none;'}}) }}
                    {{ form_end(formulaire) }}



                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
